{
  "manifest_version": 3,
  "name": "SafeBrowse AI",
  "version": "1.0.0",
  "description": "Un plugin de navigation intelligent pour la détection et la prévention des sites de phishing, des menaces web, des vulnérabilités, des sites adultes et des publicités.",
  "author": "Gad Makengi",

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "SafeBrowse AI"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.bing.com/*",
        "https://*.yahoo.com/*",
        "https://*.duckduckgo.com/*",
        "http://*.apple.com/*",
        "https://*.amazon.com/*"
      ],      
      "js": [
        "content_scripts/adblock_cosmetic.js",
        "content_scripts/content_analyzer.js",
        "content_scripts/extract_features.js"
      ],

      "css": ["content_scripts/content_styles.css",
              "content_scripts/adblock_cosmetic.css"],

      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    {
      "resources": [
        "content_scripts/extract_features.js",
        "pages/threats.html",
        "pages/blocking_page.html",
        "pages/phish_block.html",
        "assets/adult_blocklist.txt",
        "assets/phishing_blocklist.txt",
        "assets/adblock_list",
        "images/icon128.png",
        "images/icon_safe_16.png",
        "images/icon_safe_32.png",
        "images/icon_danger_16.png",
        "images/icon_danger_32.png",
        "images/icon_whitelisted_16.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestWithDynamicRules",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules_adblock",
        "enabled": true,
        "path": "assets/rules_adblock.json"
      },
      {
        "id": "rules_dynamic_init",
        "enabled": true,
        "path": "assets/rules_dynamic_init.json"
      }
    ]
  }  
}